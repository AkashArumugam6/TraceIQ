// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model LogEntry {
  id        Int      @id @default(autoincrement())
  source    String
  event     String
  ip        String
  user      String
  timestamp DateTime @default(now())

  @@map("log_entries")
}

model Anomaly {
  id        Int      @id @default(autoincrement())
  ip        String
  severity  String
  reason    String
  timestamp DateTime @default(now())

  @@map("anomalies")
}
