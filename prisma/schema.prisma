// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model LogEntry {
  id        Int      @id @default(autoincrement())
  source    String
  event     String
  eventType String?  // Add eventType field for rule-based detection
  ip        String
  user      String
  timestamp DateTime @default(now())
  
  // Reference to related anomalies
  anomalies Anomaly[]

  @@map("log_entries")
}

model Anomaly {
  id        Int      @id @default(autoincrement())
  ip        String
  severity  String
  reason    String
  timestamp DateTime @default(now())
  
  // Reference to the log entry that triggered this anomaly
  logEntryId Int?
  logEntry   LogEntry? @relation(fields: [logEntryId], references: [id])

  @@map("anomalies")
}
